<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_select :start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.time_select :end_time %>
  </div>

  <div class="field">
    <%= form.label :week_day_ids %>
    <%= form.select(:week_day_ids, WeekDay.all.collect { |a| [a.name, a.id] }, {}, { multiple: 'true' }) %>
  </div>

  <div class="field">
    <%= form.label :teacher_id %>
    <%= form.select(:teacher_id, Teacher.all.collect { |a| [a.first_name, a.id] }, {}, {}) -%>
  </div>

  <div class="field">
    <%= form.label :subject_id %>
    <%= form.select(:subject_id, Subject.all.collect { |a| [a.name, a.id] }, {}, {}) -%>
  </div>

  <div class="field">
    <%= form.label :student_id %>
    <%= form.select(:student_ids, Student.all.collect { |a| [a.name, a.id] }, {}, {}) -%>
  </div>

  <div class="field">
    <%= form.label :classroom_name %>
    <%= form.text_field :classroom_name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
